<Window x:Class="CIS_598_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CIS_598_Project"
        mc:Ignorable="d"
        Title="DAF/AAF" Height="242" Width="706">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="114*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128*"/>
            <ColumnDefinition Width="461*"/>
        </Grid.ColumnDefinitions>
        <ContentControl Content="{Binding YourChoices}" Margin="10,14,0,0" HorizontalAlignment="Left" Width="142" Height="29" VerticalAlignment="Top" Grid.Column="0" Grid.Row="0">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <ComboBox x:Name="presets" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Text="Testing" Grid.Row="0" Grid.Column="0" Height="22">
                            <ComboBoxItem>Zoom - 598</ComboBoxItem>
                            <ComboBoxItem>Teams - Work</ComboBoxItem>
                            <ComboBoxItem>Overwatch</ComboBoxItem>
                            <ComboBoxItem>Preset 4</ComboBoxItem>
                            <ComboBoxItem>Preset 5</ComboBoxItem>
                        </ComboBox>
                        <TextBlock x:Name="tb" Text="Select a preset" IsHitTestVisible="False" Visibility="Hidden" Padding="2px"/>
                    </Grid>

                    <DataTemplate.Triggers>
                        <Trigger SourceName="presets" Property="SelectedItem" Value="{x:Null}">
                            <Setter TargetName="tb" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
        <ToggleButton x:Name="toggle" Content="Off" Grid.Column="1" Margin="68,20,92,10" Checked="toggle_Checked" Unchecked="toggle_Unchecked"></ToggleButton>
        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Padding="0,0,5,0" Width="60">Frequency</TextBlock>
        <Slider Grid.Row="1" Grid.Column="1" Value="5"></Slider>
        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Padding="0,0,5,0" Width="60">Delay</TextBlock>
        <Slider Grid.Row="2" Grid.Column="1"></Slider>
        <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Padding="0,0,5,0" Width="60">Volume</TextBlock>
        <Slider Grid.Row="3" Grid.Column="1" Value="5"></Slider>
    </Grid>

</Window>
